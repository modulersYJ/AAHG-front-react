{
  "compilerOptions": {
    "resolveJsonModule": true,

    "target": "es6",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "build"]
}
